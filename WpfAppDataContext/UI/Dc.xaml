<Window x:Class="WpfAppDataContext.UI.Dc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDataContext"
        mc:Ignorable="d"
        Title="Dc" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="15">
            <WrapPanel>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="150"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="0, 10, 0, 0">
                <TextBox Text="{Binding Width}"></TextBox>
                <TextBlock>x</TextBlock>
                <TextBox Text="{Binding Height}"></TextBox>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
